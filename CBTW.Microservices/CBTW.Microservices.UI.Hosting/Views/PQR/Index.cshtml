@model IEnumerable<CBTW.Microservices.UI.Domain.Models.PQRViewModel>

@{
	ViewData["Title"] = "Index";
}

<h1>PQRs</h1>

<p>
	<a class="btn btn-primary" asp-action="Create">Crear Nuevo</a>
</p>
<div class="row mb-5">
	<div class="col-md-12">
		<form asp-action="Index" method="get">
			<div class="row">
				<div class="col-md-6">
                    <label asp-for="@Model.FirstOrDefault().Id" class="control-label"></label>
                    <input asp-for="@Model.FirstOrDefault().Id" class="form-control" />
                </div>         
				<div class="col-md-6">
					<label asp-for="@Model.FirstOrDefault().Customer" class="control-label"></label>
					<select id="drpEmpList" class="form-control" asp-for="@Model.FirstOrDefault().Customer" asp-items="@(new SelectList(ViewBag.Clientes, "Value", "Text"))">
						<option value="">--Select--</option>
					</select>
				</div>                       
				<div class="col-md-12 mt-3">
					<input type="submit" value="Buscar" class="btn btn-secondary float-end" />
				</div>
			</div>
		</form>
	</div>
</div>
<table class="table table-striped table-hover">
	<thead>
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.Id)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Documento)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.NombreCompleto)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Asunto)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Descripcion)
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
				<tr>
					<td>
					@Html.DisplayFor(modelItem => item.Id)
					</td>
					<td>
					@Html.DisplayFor(modelItem => item.Documento)
					</td>
					<td>
					@Html.DisplayFor(modelItem => item.NombreCompleto)
					</td>
					<td>
					@Html.DisplayFor(modelItem => item.Asunto)
					</td>
					<td>
					@Html.DisplayFor(modelItem => item.Descripcion)
					</td>
					<td>
						<a class="mt-3 btn btn-info" asp-action="Details" asp-route-id="@item.Id">Detalles</a>
					</td>
				</tr>
		}
	</tbody>
</table>